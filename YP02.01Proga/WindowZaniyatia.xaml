<Window x:Class="YP02._01Proga.WindowZaniyatia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YP02._01Proga"
        mc:Ignorable="d"
        Title="WindowZaniyatia" Height="905" Width="1500"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="#000000"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBoxBase}" x:Key="TextBoxNoUnderline">
            <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="Transparent" />
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.01*"/>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="0.01*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.01*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="6">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FC4000" Offset="0" />
                    <GradientStop Color="#7F0DEB" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <TextBlock Text="Занятия" Grid.Column="1" Grid.Row="0" Foreground="White" VerticalAlignment="Center" FontSize="24" FontFamily="Arial"/>

        <Button Grid.Column="3" Background="#232323" VerticalAlignment="Center" HorizontalAlignment="Right" BorderThickness="0" Width="85" Height="45" Click="exit_click">
            <Button.Clip>
                <RectangleGeometry RadiusX="15" RadiusY="15" Rect="0,0,85,45" />
            </Button.Clip>
            <materialDesign:PackIcon Kind="ArrowRight" Foreground="White"/>
        </Button>

        <DataGrid x:Name="dg" Grid.Column="0" Grid.RowSpan="23" Grid.ColumnSpan="2" Grid.Row="1" Background="#C4C4C4" Foreground="Black"
IsReadOnly="True" AutoGenerateColumns="False" SelectionChanged="dg_select" 
GridLinesVisibility="All" HorizontalGridLinesBrush="Black" VerticalGridLinesBrush="Black">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding NameZaniatiya}" Header="Название занятия"/>
                <DataGridTextColumn Binding="{Binding DateZaniatiya}" Header="Дата занятия"/>
                <DataGridTextColumn Binding="{Binding ColvoHours}" Header="Количество часов"/>
                <DataGridTextColumn Binding="{Binding ColvoUchastnikov}" Header="Количество участников"/>
                <DataGridTextColumn Binding="{Binding Treners.Email}" Header="Почта тренера"/>
            </DataGrid.Columns>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="Background" Value="#C4C4C4" />
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="BorderThickness" Value="0,0,1,1" />
                    <Setter Property="Padding" Value="10,5,10,5" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                    <Setter Property="Background" Value="#C4C4C4"/>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <Border Grid.Column="3" Grid.Row="2" CornerRadius="25" Background="#232323">
            <TextBox x:Name="name" Foreground="White" materialDesign:HintAssist.Hint="Название занятия" FontSize="20" FontFamily="Arial" 
                     Background="Transparent" BorderThickness="0" Padding="20,0,0,0" Style="{StaticResource TextBoxNoUnderline}"
                     PreviewTextInput="Proverka"/>
        </Border>

        <Border Grid.Column="3" Grid.Row="4" Background="#232323">
            <DatePicker x:Name="data" Foreground="White" materialDesign:HintAssist.Hint="Дата занятия" FontSize="20" 
                        FontFamily="Arial" Background="Transparent" BorderThickness="0" Padding="0,0,0,0" IsTodayHighlighted="False"
                        IsEnabled="False"
                        />
        </Border>

        <Border Grid.Column="3" Grid.Row="6" CornerRadius="25" Background="#232323">
            <TextBox x:Name="chas" Foreground="White" materialDesign:HintAssist.Hint="Количество часов" FontSize="20" 
                     FontFamily="Arial" Background="Transparent" BorderThickness="0" Padding="20,0,0,0" 
                     Style="{StaticResource TextBoxNoUnderline}" PreviewTextInput="proverkaa_input" TextChanged="proverkaaa_text"/>
        </Border>

        <Border Grid.Column="3" Grid.Row="8" CornerRadius="25" Background="#232323">
            <TextBox x:Name="uchast" Foreground="White" materialDesign:HintAssist.Hint="Количество участников" 
                     FontSize="20" FontFamily="Arial" Background="Transparent" BorderThickness="0" 
                     Padding="20,0,0,0" Style="{StaticResource TextBoxNoUnderline}" PreviewTextInput="proverkaa_input" TextChanged="proverka1_text"/>
        </Border>

        <ComboBox x:Name="vybor" Grid.Column="3" Grid.Row="10" FontSize="20" FontFamily="Arial" Foreground="White" 
                  HorizontalAlignment="Stretch" Padding="20,0,0,0" VerticalAlignment="Stretch" Background="#232323" 
                  BorderBrush="Transparent" BorderThickness="0"  materialDesign:HintAssist.Hint="Тренер"/>

        <Border Grid.Column="3" Grid.Row="12" CornerRadius="25">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FC4000" Offset="1" />
                    <GradientStop Color="#7F0DEB" Offset="0" />
                </LinearGradientBrush>
            </Border.Background>
            <Button Content="Добавить" Foreground="White" Background="Transparent" BorderThickness="0" FontSize="24" FontFamily="Arial" Click="add_click"/>
        </Border>

        <Border Grid.Column="3" Grid.Row="14" CornerRadius="25" Background="#7F0DEB">
            <Button Content="Изменить" Foreground="White" Background="Transparent" BorderThickness="0" FontSize="24" FontFamily="Arial" Click="edit_click"/>
        </Border>

        <Border Grid.Column="3" Grid.Row="16" CornerRadius="25" Background="#FC4000">
            <Button Content="Удалить" Foreground="White" Background="Transparent" BorderThickness="0" FontSize="24" FontFamily="Arial" Click="delete_click"/>
        </Border>

        <Border Grid.Column="3" Grid.Row="18" CornerRadius="25" Background="#AC1F97">
            <Button Content="Очистить поля" Foreground="White" Background="Transparent" BorderThickness="0" FontSize="24" FontFamily="Arial" Click="remove_click"/>
        </Border>

    </Grid>
</Window>
