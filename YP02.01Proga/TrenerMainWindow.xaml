<Window x:Class="YP02._01Proga.TrenerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YP02._01Proga"
        mc:Ignorable="d"
        Title="TrenerMainWindow" Height="903" Width="1400"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="#000000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="6">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FC4000" Offset="0" />
                    <GradientStop Color="#7F0DEB" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <TextBlock Text="Здравствуйте - Тренер" Grid.Column="1" Grid.Row="0" Foreground="White" VerticalAlignment="Center" FontSize="24" 
                   FontFamily="Arial"/>

        <!-- Простой ListBox без ItemTemplate -->
        <ListBox x:Name="List" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="0" 
                 Foreground="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsHitTestVisible="False"/>

        <Border Grid.Column="2" Grid.Row="3" CornerRadius="25">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FC4000" Offset="1" />
                    <GradientStop Color="#7F0DEB" Offset="0" />
                </LinearGradientBrush>
            </Border.Background>
            <Button Content="Скачать расписание" Foreground="White" Background="Transparent" BorderThickness="0" 
        FontSize="24" FontFamily="Arial" Click="otchet_click" VerticalAlignment="Center"/>
        </Border>
        
    </Grid>

    
</Window>